<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.chaima.myapplication.PrisonerDetailsFragment"
    >

    <ImageView
        android:id="@+id/thumbnail"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentLeft="true"
        android:src="@drawable/profile"
        android:background="@drawable/prison_bg"/>
    <LinearLayout
        android:id="@+id/line1"
        android:layout_below="@id/thumbnail"
        android:background="@color/list_divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:layout_marginBottom="15dp"></LinearLayout>
    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/line1"
        android:textSize="25dp"
        android:textStyle="normal"
        android:layout_centerInParent="true"
        android:hint="Prisoner Name"/>

    <TextView
        android:id="@+id/tvMatricule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvName"
        android:layout_marginTop="2dip"
        android:textSize="22dp"
        android:layout_centerInParent="true"
        android:hint="- - -"/>

    <TextView
        android:id="@+id/tvAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvMatricule"
        android:layout_marginTop="2dp"
        android:textSize="22dp"
        android:layout_centerInParent="true"
        android:hint="Address"/>

    <LinearLayout
        android:id="@+id/line2"
        android:layout_below="@id/tvAddress"
        android:background="@color/list_divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:layout_marginBottom="15dp"></LinearLayout>

    <EditText
        android:id="@+id/etNotes"
        android:layout_below="@id/line2"
        android:layout_width="match_parent"
        android:gravity="top"
        android:ems="20"
        android:hint="Add Notes"
        android:layout_height="80dp" />
    <Button
        android:id="@+id/btnSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:layout_below="@id/etNotes"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>
